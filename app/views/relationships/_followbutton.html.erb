<% if user_signed_in? %>
  <% if current_user.id != @user.id %>
        <% if @user.followed_by?(current_user) %>
          <%= link_to user_relationships_path(@user.id), class: "btn btn-info" , method: :delete, remote: true do %>
            <i class="fas fa-user-tag">フォロー中</i>
          <% end %>
        <% else %>
          <%= link_to user_relationships_path(@user.id), class: "btn btn-info",  method: :post, remote: true do %>
            <i class="fas fa-user-tag">フォローする</i>
          <% end %>
        <% end %>
    <% end %>
<% else %>
  <div class="m-1 h-25">
    <a class="aria-expanded" data-toggle="modal" data-target="#menuModal" href="#">
      <i class="fas fa-user-tag">フォローする</i>
    </a>
  </div>
<% end %>