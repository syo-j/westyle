<h1>Posts#search</h1>
<div>
	<%= search_form_for @q, url: "/posts/search" do |f| %>
	  <%= f.search_field :clothes_name_or_clothes_bland_name_or_clothes_category_name_or_title_or_content_cont, label: false, placeholder: '2文字以上での入力を' %>
	  <%= f.submit %>
	<% end %>
</div>

<% if @post_images.any? %>
	<% @post_images.each do |article| %>
		<div class="img">
		<%= link_to image_tag(article.image_url), "/posts/#{article.id}" %>
		</div>
		<br/>
	<% end %>
<% end %>

