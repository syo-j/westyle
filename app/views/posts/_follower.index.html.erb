<div class="row">
	<%  @posts.each do |post| %>
		<% if user_signed_in? %>
			<% current_user.followers.each do |follower| %>
				<% if follower.id == post.user_id %>
					<div class='col-6 col-sm-4 col-lg-3'>
						<!-- カード01 -->
						<div class='mb-4'>
							<div class="img-fluid overflow-hidden zoomIn image-trim">
								<% if post.image_url.present? %>
									<%= link_to image_tag(post.image_url), post_path(post) %>
								<% end %>
							</div>
							<!-- カードエリアの本文 -->
							<div class="row pt-2">
								<div class="col-12 row">
									<div class="col-5">
										<%= link_to image_tag(post.user.photo_url, :class => "img-fluid rounded-circle icon-trim"), user_path(post.user_id) %>
									</div>
									<div class="col-7 row">
										<p class="col-12 text-center pt-3 text-dark">
											<span><%= time_ago_in_words(post.created_at) %>前</span>
										</p>
									</div>
								</div>
								<h6 class="col-12 pt-2 text-dark text-truncate">
									<%= post.title %>
								</h6>
								<div class="col-12 row text-center pt-2">
									<p class="col-6 text-dark text-truncate">
										<span><i class="fas fa-thumbs-up"></i> : <%= post.likes.count %></span>	
									</p>
									<p class="col-6 text-dark text-truncate">
										<span><i class="fas fa-eye"></i> : <%=  post.impressionist_count %></span>
									</p>
								</div>	
							</div>
						</div>
					</div>
				<% end %>
			<% end %>
		<% end %>
	<% end %>
</div>