
<!-- container -->
<div class="container my-5 posts-bg">
	<div class='row justify-content-center'>
		<!-- コンテンツ -->
		<div class="col-12 col-md-10 col-lg-7 pt-5">
			<% if user_signed_in? %>
				<% unless @followings.blank? %>
					<!-- follower -->
					<%= render "followings_index" %>
				<% else %>
					<%= render "all.index" %>
				<% end %>
			<% else %>
				<!-- all -->
				<%= render "all.index" %>
			<% end %>
		</div>
		<!-- カテゴリー -->
		<div class="col-4 d-none d-lg-inline-block">
			<div class="sticky-top posts-category">
				<div class="container-flid py-1 posts-category-bg rounded">
			        <div class="row">
			          	<div class="col-12">
			          		<% if user_signed_in? %>
					          	<div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
							      <a class="nav-link active page-1" id="v-pills-timeline-tab" data-toggle="pill" href="#v-pills-timeline" role="tab" aria-controls="v-pills-timeline" aria-selected="true">タイムライン</a>
							      <a class="nav-link page-2" id="v-pills-all-tab" data-toggle="pill" href="#v-pills-all" role="tab" aria-controls="v-pills-all" aria-selected="false">ALL</a>
							      <a class="nav-link page-3" id="v-pills-shop-tab" data-toggle="pill" href="#v-pills-shop" role="tab" aria-controls="v-pills-shop" aria-selected="false">SHOP</a>
							      <a class="nav-link page-4" id="v-pills-user-tab" data-toggle="pill" href="#v-pills-user" role="tab" aria-controls="v-pills-user" aria-selected="false">USER</a>
							    </div>
							<% else %>
								<div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
							      <a class="nav-link active page-1" id="v-pills-all-tab" data-toggle="pill" href="#v-pills-all" role="tab" aria-controls="v-pills-all" aria-selected="true">ALL</a>
							      <a class="nav-link page-2" id="v-pills-shop-tab" data-toggle="pill" href="#v-pills-shop" role="tab" aria-controls="v-pills-shop" aria-selected="false">SHOP</a>
							      <a class="nav-link page-3" id="v-pills-user-tab" data-toggle="pill" href="#v-pills-user" role="tab" aria-controls="v-pills-user" aria-selected="false">USER</a>
							    </div>
							<% end %>
			          	</div>
			        </div>
				</div>
				<div class="row text-center my-5">
					<%= link_to "初めての方", home_about_path, class: "col-6" %>
					<%= link_to "問い合わせ", home_contact_path, class: "col-6" %>
				</div>
				<div>
					<p class="text-center py-5"><small>Copyright &copy;2020 WE STYLE,All Rights Reserved.</small></p>
				</div>
			</div>
		</div>
	</div>
</div>



