<%= javascript_include_tag 'photo_prev' %>

<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

  <%= f.error_notification %>

  <div class="field">
    <%= f.label :ユーザーネーム %><br />
    <%= f.text_field :name, presence: true, autofocus: true %>
  </div>
  <div class="field image">
    <%= f.label :アイコン画像 %>
    <!-- id "file"で、fileとdivを紐付けクリック時に連動 -->
    <div id="user_img_field" onClick="$('#file').click()" >
 
        <!-- 画像があるときは画像を表示する -->
        <% if @user.photo.url != "default.jpg" && @user.photo.url.present? %>
          <%= image_tag(@user.photo.url) %>
        <% else %>
          <i class="fas fa-image"></i><i class="fas fa-file-upload add"></i>
        <% end %>
    </div>
    <!-- id "file"をつけ、「display:none;」で隠す -->
    <%= f.file_field :photo, class: "image", style: "display:none;", id: "file"%>
  </div>
  
  <div class="field">
    <%= f.label :エリア %>
    <%= f.collection_select :area_id, Area.all, :id, :prefecture, :include_blank => true %>
  </div>
  <div class="field">
    <%= f.label :性別 %><br />
    <%= f.text_field :gender, presence: true, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :年齢 %><br />
    <%= f.number_field :age, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :身長 %><br />
    <%= f.number_field :height, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :フェースブックURL %><br />
    <%= f.url_field :facebook_url, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :ツイッターURL %><br />
    <%= f.url_field :twitta_url, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :インスタグラムURL %><br />
    <%= f.url_field :instaguram_url, autofocus: true %>
  </div>

  
    <%= f.input :email, required: true, autofocus: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password,
                hint: "leave it blank if you don't want to change it",
                required: false,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                required: false,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :current_password,
                hint: "we need your current password to confirm your changes",
                required: true,
                input_html: { autocomplete: "current-password" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
