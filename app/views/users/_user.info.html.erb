              <%= link_to @user.twitta_url, class: "text-info" do %><i class="fab fa-twitter-square"></i> <-click<% end %>
            <% end %>
          <% end %>
        </h4>
        <h4 class="mb-2 text-dark">
          instaguram : 
          <% unless @user.instaguram_url.blank? %>
            <%= link_to @user.instaguram_url, class: "text-warning" do %><i class="fab fa-instagram"></i> <-click<% end %>
          <% end %>
        </h4>
        <div class="col-12 py-5 text-center">
          <h2><%= link_to "USER情報編集はこちら", edit_user_registration_path,class: "btn btn-outline-success p-3" %></h2>
        </div>
      </div>
    <% end %>
  </div>
</div>
