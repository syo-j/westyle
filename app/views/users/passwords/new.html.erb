<div class="container-login">
	<h1><%= t('.forgot_your_password') %></h1>

	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
	  <%= bootstrap_devise_error_messages! %>

	  <div class="form-group">
	    <%= f.label :email %>
	    <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control',required: true, minlength: @minimum_password_length, maxlength: '30' %>
	  </div>

	  <div class="form-group">
	    <%= f.submit t('.send_me_reset_password_instructions'), class: 'btn btn-primary btn-block' %>
	  </div>
	<% end %>

	<%= render 'users/shared/links' %>
</div>