.about-text{
  letter-spacing: 5px;
  line-height: 2.0;
  font-size: 1rem;
  font-weight: bold;
}


.contents {
  position: relative;
  overflow: hidden;
  margin: 10% 0;
  padding: 80px 0;
}

.contents:before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 55%;
  height: 80%;
  margin: 5% -5% 0;
  background-image: url("<%= asset_path('about1.png') %>");
  background-size: cover;
  -webkit-transform-origin: left center;
  -ms-transform-origin: left center;
  transform-origin: left center;
  -webkit-transform: rotate(3deg);
  -ms-transform: rotate(3deg);
  transform: rotate(3deg);
  z-index: -1;
}

.contents_inner {
  box-sizing: border-box;
  width: 100%;
