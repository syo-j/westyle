  height: 100%;
  margin-top: 100px;
  padding: 40px 0;
  background: linear-gradient(to bottom, #40E0D0 0%,#FF8C00 50%, #FF0080 100%);
  opacity: 0.5;
  animation: huerotator 15s infinite alternate;
}

@keyframes huerotator {
  0% {
    -webkit-filter: hue-rotate(0deg);
    filter: hue-rotate(0deg);
  }

  100% {
    -webkit-filter: hue-rotate(400deg);
    filter: hue-rotate(400deg);
  }
}

