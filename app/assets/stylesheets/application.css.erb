/* 画像トリミング(正方形) */
.image-trim-square {
  position: relative;/* 相対位置指定 */
  overflow: hidden;
  padding-top: 100%; /* 比率 */
}
.image-trim-square img {
  position: absolute;
  top: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* フィルター */
.image-trim-square .caption {
  font-size:    130%;
  position: absolute;
  top: 50%; /*親要素を起点に上から50%*/
  left: 50%;  /*親要素を起点に左から50%*/
  transform: translateY(-50%) translateX(-50%); /*要素の大きさの半分ずつを戻す*/
  -webkit-transform: translateY(-50%) translateX(-50%);
  color:      #fff;
}
.image-trim-square .mask {
  width:      100%;
  height:     100%;
  position:   absolute; /* 絶対位置指定 */
  top:      0;
  left:     0;
  opacity:    0;  /* マスクを表示しない */
  background-color: rgba(0,0,0,0.5);  /* マスクは半透明 */
  -webkit-transition: all 0.2s ease;
  transition:   all 0.2s ease;
}
.image-trim-square:hover .mask {
  opacity:    1;  /* マスクを表示する */
}


